<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background color-changing view -->
    <View
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0" /> <!-- Light gray background -->

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <!-- Game Title -->
        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="422dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ewert"
            android:gravity="center"
            android:text="Quickdraw"
            android:textColor="#000000"
            android:textSize="54sp"
            android:textStyle="bold" />

        <!-- Countdown Text -->
        <TextView
            android:id="@+id/countdownText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/rye"
            android:gravity="center"
            android:text="Stow yer six-shooter till it turns, be quick or kick the bucket."
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="normal" />

        <!-- Result Text -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/ewert"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Bottom buttons in a horizontal layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <!-- Start Game Button -->
            <Button
                android:id="@+id/startButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/rye"
                android:text="Start Game"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- View Leaderboard Button -->
            <Button
                android:id="@+id/leaderboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/rye"
                android:text="Leaderboard"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
